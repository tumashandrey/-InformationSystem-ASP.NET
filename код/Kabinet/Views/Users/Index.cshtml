@model IEnumerable<Kabinet.Models.Users>

@{
    ViewBag.Title = "Index";
}
<div class="header" style="height: 150px;">
    <h2>Пользователи</h2>
    <br />
    <button class="blue" onclick="window.location='/Users/Create'">Создать</button>
</div>
<div class="sc-page">

    @foreach (var item in Model)
    {
        <div class="department">
            <div class="product">
                <div class="product-name" onclick="window.location='/Users/Edit?id=@item.ID' ">@item.Login</div>
                <div class="product-delete" onclick="window.location='/Users/Delete?id=@item.ID' " title="Удалить" style="margin-top: -8px;">
                    <svg role="img" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="md-icon"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"></path></svg>
                </div>
            </div>
        </div>
    }
</div>